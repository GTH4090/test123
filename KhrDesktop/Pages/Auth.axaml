<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="KhrDesktop.Pages.Auth">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <Label Content="Login:"/>
            <TextBox Name="LoginTbx"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Password:"/>
            <TextBox Name="PasswordTbx" PasswordChar="*"/>
            <CheckBox Name="PasCheck" Checked="PasCheck_OnChecked" Unchecked="PasCheck_OnUnchecked"/>
        </StackPanel>
        <Button Content="Авторизоваться" Name="LoginBtn" Click="LoginBtn_OnClick"/>
        <Button Content="Регистрация" Name="RegBtn" Click="RegBtn_OnClick"/>
        <Button Content="Войти как гость" Name="GuestBtn" Click="GuestBtn_OnClick"/>
    </StackPanel>
</UserControl>
